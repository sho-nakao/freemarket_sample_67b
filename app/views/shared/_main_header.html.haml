.header
  .header__middle-box
    = link_to root_path do
      .header__middle-box__img
    =form_with url: "/items/search", method: "GET",local: true do |f|
      = f.text_field :text, placeholder: 'キーワドから探す',class: "header__middle-box__search-box"
      = f.submit "・",class: "header__middle-box__icon"
  .header__middle-box__lower
    .header__middle-box__lower__left-box
      .header__middle-box__lower__left-box__category
        カテゴリー
      .header__middle-box__lower__left-box__brand
        ブランド
    .header__middle-box__lower__right-box
      - unless user_signed_in?
        = link_to new_user_session_path do
          .header__middle-box__lower__right-box__login
            ログイン
        =link_to new_signup_path do
          .header__middle-box__lower__right-box__sign-up
            新規会員登録
      - else
        = link_to user_path(current_user) do
          .header__middle-box__lower__right-box__sign-up
            ユーザー詳細ページ